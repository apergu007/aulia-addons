<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="product_template_tree_view_inherit_bmo_stock" model="ir.ui.view">
        <field name="name">product.template.product.list.bmo_stock</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="groups">bmo_stock.see_product_price</attribute>
            </xpath>
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="groups">bmo_stock.see_product_cost</attribute>
            </xpath>

        </field>
    </record>

    <record id="product_template_only_form_view_inherit_bmo_stock" model="ir.ui.view">
        <field name="name">product.template.form.inherit.bmo_stock</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//label[@for='list_price']" position="attributes">
                <attribute name="groups">bmo_stock.see_product_price</attribute>
            </xpath>
            <xpath expr="//div[@name='list_price_uom']" position="attributes">
                <attribute name="groups">bmo_stock.see_product_price</attribute>
            </xpath>

            <xpath expr="//label[@for='standard_price']" position="attributes">
                <attribute name="groups">bmo_stock.see_product_cost</attribute>
            </xpath>
            <xpath expr="//div[@name='standard_price_uom']" position="attributes">
                <attribute name="groups">bmo_stock.see_product_cost</attribute>
            </xpath>

            <xpath expr="//field[@name='supplier_taxes_id']" position="before">
                <field name="manual_cost_price" groups="bmo_stock.see_product_cost"/>
            </xpath>
        </field>
    </record>

</odoo>