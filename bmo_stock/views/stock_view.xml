<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="product_product_stock_tree_inherit_stock_account_inherit_bmo_stock" model="ir.ui.view">
        <field name="name">product.product.stock.list.bmo_stock</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock_account.product_product_stock_tree_inherit_stock_account"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='avg_cost']" position="attributes">
                <attribute name="groups">bmo_stock.see_product_cost</attribute>
            </xpath>
            <xpath expr="//field[@name='total_value']" position="attributes">
                <attribute name="groups">bmo_stock.see_product_cost</attribute>
            </xpath>

        </field>
    </record>

</odoo>