<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record model="ir.rule" id="stock_inventory_comp_rule">
            <field name="name">Inventory Adjustments multi-company</field>
            <field name="model_id" ref="bmo_inventory_adjustments.model_stock_inventory"/>
            <field name="domain_force">
                ['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]
            </field>
        </record>

        <record model="ir.rule" id="stock_inventory_line_comp_rule">
            <field name="name">Inventory Adjustments Line multi-company</field>
            <field name="model_id" ref="bmo_inventory_adjustments.model_stock_inventory_line"/>
            <field name="domain_force">
                ['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]
            </field>
        </record>

    </data>
</odoo>