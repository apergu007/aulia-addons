<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="product_category_list_view_inherit_bmo_stock" model="ir.ui.view">
        <field name="name">product.category.list.bmo_stock</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_list_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='display_name']" position="after">
                <field name="property_cost_method"/>
                <field name="removal_strategy_id"/>
                <field name="property_stock_valuation_account_id" optional="show"/>
                <field name="property_stock_journal" optional="show"/>
                <field name="property_stock_account_input_categ_id" optional="show"/>
                <field name="property_stock_account_output_categ_id" optional="show"/>
                <field name="property_stock_account_production_cost_id" optional="show"/>
                <field name="property_account_income_categ_id" optional="show"/>
            </xpath>

        </field>
    </record>

</odoo>