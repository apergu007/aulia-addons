<odoo>
    <record id="view_wiz_production_mrp" model="ir.ui.view">
        <field name="name">Wizard Absensi Report Xls</field>
        <field name="model">wiz.production.mrp</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_from" required="1"/>
                        <field name="date_to" required="1"/>
                        <field name="tipe_produksi" required="1"/>
                    </group>
                    <group>
                        <field name="name" invisible="1"/>
                        <field name="data_file" filename="name" widget="binary" readonly="1"/>
                    </group>
                </group>
                <newline />
                <footer>
                    <button name="eksport_excel" string="print xlsx" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_wiz_production_mrp" model="ir.actions.act_window">
        <field name="name">Report Production</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wiz.production.mrp</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_wiz_production_mrp" />
        <field name="target">new</field>
    </record>


    <menuitem
        id="mrp_report_production_mrp"
        name="Report Production"
        parent="mrp.menu_mrp_reporting"
        action="action_view_wiz_production_mrp"
        sequence="21"/>
</odoo>
