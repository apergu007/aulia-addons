                                    <td style="border: 1px solid black;text-align:center;vertical-align: top;"> _
                                        <!-- <span t-esc="o.review_apr_ids[-1].requested_by.function"/> -->
                                    </td>
                                    
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="footer">
                    <img src="/bmo_report/static/img/footer.jpeg" style="width:100%; max-height:90px;"/>
                    <div class="text-end text-muted">
                        <div t-if="report_type == 'pdf' and display_name_in_footer" t-out="o.name">(document name)</div>
                        <div t-if="report_type == 'pdf'">Page <span class="page"/> / <span class="topage"/></div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <record id="action_report_sales_invoice" model="ir.actions.report">
        <field name="name">Report Sales Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">bmo_report.report_sales_invoice</field>
        <field name="report_file">bmo_report.report_sales_invoice</field>
        <field name="print_report_name">'Sales Order - %s' % object.name</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="paperformat_id" ref="bmo_report.report_sales_invoice_paperformat" />
        <field name="binding_type">report</field>
    </record>
</odoo>