<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_move_form_inherit_bmo_account" model="ir.ui.view">
        <field name="name">account.move.form.inherit.bmo_account</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@id='header_right_group']/field[@name='date']" position="after">
                <!-- <field name="types" invisible="move_type != 'in_invoice'"/> -->
                <field name="types" invisible="1"/>
                <field name="using_auto_complete" invisible="1"/>
            </xpath>


            <xpath expr="//page[@id='other_tab_entry']" position="after">
                <page id="doc_check" string="Document Check" name="doc_check" invisible="move_type != 'in_invoice'">
                    <group>
                        <group>
                            <field name="faktur_pajak" readonly="state != 'draft'"/>
                            <field name="po_ttd" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="surat_jalan" readonly="state != 'draft'"/>
                            <field name="vendor_bill" readonly="state != 'draft'"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

</odoo>