<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_form_tolerance_inherit" model="ir.ui.view">
        <field name="name">product.template.form.tolerance</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//group" position="inside">
                <group string="Receiving Tolerance" name="receiving_tolerance">
                    <field name="tolerance_type"/>
                    <field name="tolerance_value"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
