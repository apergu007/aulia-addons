<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_multi_discount" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.multi.discount</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Tambahkan field di tree (list) order lines -->
            <xpath expr="//field[@name='order_line']/list//field[@name='discount']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/list//field[@name='discount']" position="before">
                <field name="discount_type" />
                <field name="multi_discount" placeholder="e.g. 10+5+2"/>
            </xpath>

            <!-- Tambahkan juga di form order line -->
            <xpath expr="//field[@name='order_line']/form//field[@name='discount']" position="before">
                <field name="discount_type" />
                <field name="multi_discount" placeholder="e.g. 10+5+2"/>
            </xpath>

        </field>
    </record>
</odoo>
