<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Invoice Form -->
    <record id="view_move_form_inherit_multi_discount" model="ir.ui.view">
        <field name="name">account.move.form.inherit.multi.discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Tambahkan di tree (list) invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']/list//field[@name='discount']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list//field[@name='discount']" position="before">
                <field name="discount_type" optional="hide"/>
                <field name="multi_discount" placeholder="e.g. 10+5+2" optional="hide"/>
            </xpath>

            <!-- Tambahkan juga di form invoice line -->
            <xpath expr="//field[@name='invoice_line_ids']/form//field[@name='discount']" position="before">
                <field name="discount_type" />
                <field name="multi_discount" placeholder="e.g. 10+5+2"/>
            </xpath>
        </field>
    </record>
</odoo>
