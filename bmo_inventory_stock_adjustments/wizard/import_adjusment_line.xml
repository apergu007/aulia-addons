<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="form_wiz_import_adjusment_line" model="ir.ui.view">
        <field name="name">form.wizard.wiz.import.adjusment.line</field>
        <field name="model">wiz.import.adjusment.line</field>
        <field name="arch" type="xml">
            <form string="Import Adjusment Line">
                <h2>Select file to import</h2>
                <p></p>
                <ul id="master_qc_format">
                    <li> Microsoft Office Excel (.xlsx) -- 
                        <a href="/bmo_inventory_stock_adjustments/static/templates/import_adjust_line.xlsx" class="ml4">
                            <i class="fa fa-download mr4"></i>Sample Template</a>
                    </li>
                </ul>
                <group>
                    <field name="file_data" filename="file_name" widget="binary" required="1" class="oe_inline"/>
                    <field name="file_name" invisible="1"/>
                </group>
                <footer>
                    <button string="Import" name="import_data" type="object" class="btn-primary"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wiz_import_adjusment_line" model="ir.actions.act_window">
        <field name="name">Import Adjusment Line</field>
        <field name="res_model">wiz.import.adjusment.line</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>

</odoo>
