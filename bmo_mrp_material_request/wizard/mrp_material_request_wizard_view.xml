
<odoo>
    <record id="view_mrp_material_request_wizard" model="ir.ui.view">
        <field name="name">mrp.material.request.wizard.form</field>
        <field name="model">mrp.material.request.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Material Request">
                <group>
                    <field name="production_id" readonly="1"/>
                    <field name="picking_type_id"/>
                    <field name="location_id"/>
                    <field name="location_dest_id"/>
                </group>
                <notebook>
                    <page name="detail" string="Detail">
                        <field name="line_ids">
                            <list editable="bottom">
                                <field name="product_id"/>
                                <field name="qty"/>
                                <field name="uom_id"/>
                            </list>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button string="Create Transfer" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
