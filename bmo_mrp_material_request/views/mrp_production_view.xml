
<odoo>
    <record id="mrp_production_form_inherit_material_request" model="ir.ui.view">
        <field name="name">mrp.production.form.material.request.btn</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_material_request_wizard" string="Material Request" type="object" class="oe_highlight" invisible="state in ('draft','done','cancel')"/>
            </xpath>
        </field>
    </record>
</odoo>
