<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_bom_button_inherit_bmo_mrp" model="ir.ui.view">
        <field name="name">product.template.procurement.inherit.bmo_mrp</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="mrp.product_template_form_view_bom_button"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_used_in_bom']" position="attributes">
                <attribute name="groups">bmo_mrp.group_bom_see_menu</attribute>
            </xpath>
        </field>
    </record>

    <record id="product_product_form_view_bom_button_inherit_bmo_mrp" model="ir.ui.view">
        <field name="name">product.product.procurement.inherit.bmo_mrp</field>
        <field name="model">product.product</field> 
        <field name="inherit_id" ref="mrp.product_product_form_view_bom_button"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_used_in_bom']" position="attributes">
                <attribute name="groups">bmo_mrp.group_bom_see_menu</attribute>
            </xpath>
        </field>
    </record>

</odoo>
