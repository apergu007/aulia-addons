<odoo>
    <record id="view_stock_picking_form_bmo_blocking" model="ir.ui.view">
        <field name="name">stock.picking.form.bmo.blocking</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//header" position="inside">
                <button name="action_open_blocking_picking"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-exclamation-triangle"
                        invisible="not (blocking_mrp_id or blocking_picking_id)">
                    <span>Blocking Document</span>
                </button>
            </xpath>

            <xpath expr="//sheet" position="before">
                <div class="alert alert-warning" role="status"
                     invisible="not (blocking_mrp_id or blocking_picking_id)">
                    Dokumen ini sedang menunggu:
                    <strong>
                        <field name="blocking_mrp_id"/>
                        <field name="blocking_picking_id"/>
                    </strong>
                </div>
            </xpath>

        </field>
    </record>
</odoo>
