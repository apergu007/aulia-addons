<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_purchase_order_filter_approver" model="ir.ui.view">
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="name">view_purchase_order_filter_approver</field>
            <field name="model">purchase.order</field>
            <field name="arch" type="xml">
                <filter name="approved" position="before">
                    <filter name="waiting_for_approval" string="Waiting for Approval" domain="[('current_approver', '!=', False)]"/>
                    <filter name="waiting_for_my_approval" string="Waiting for My Approval" domain="[('current_approver', '!=', False), ('current_approver.user_id', '=', uid)]"/>
                    <separator/>
                </filter>
            </field>
        </record>


        <record id="purchase_order_approval_form" model="ir.ui.view">
            <field name="name">purchase.order.approval.form</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="model">purchase.order</field>
            <field name="arch" type="xml">

                <button name="button_approve" position="attributes">
                    <attribute name="groups"></attribute>
                    <attribute name="invisible">is_current_approver == False</attribute>
                </button>

                <xpath expr="//div[@name='reminder']" position="after">
                    <field name="team_id" options='{"no_edit": True, "no_create": True, "no_open": True}' invisible="po_order_approval_route == 'no'" required="po_order_approval_route == 'required'"/>
                </xpath>

                <field name="fiscal_position_id" position="after">
                    <field name="po_order_approval_route" invisible="True"/>
                    <!-- <field name="team_id" options='{"no_edit": True, "no_create": True, "no_open": True}' invisible="po_order_approval_route == 'no'" required="po_order_approval_route == 'required'"/> -->
                    <field name="next_approver"/>
                </field>

                <notebook position="inside">
                    <page name="approval_route" string="Approval Route" invisible="state in ['draft', 'sent'] or team_id == False">
                        <field name="approver_ids">
                            <list>
                                <field name="user_id"/>
                                <field name="role"/>
                                <field name="state"/>
                            </list>
                        </field>
                        <field name="is_current_approver" invisible="True"/>
                    </page>
                </notebook>
            </field>
        </record>

        <!--Inherit Purchase Quotation Tree View added by Vishal-->
        <record id="purchase_order_kpis_tree_inherit_purchase_approval_route" model="ir.ui.view">
            <field name="name">purchase.order.kpis.tree.inherit.purchase_approval_route</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="po_status" optional="show"/>
                </xpath>
            </field>
        </record>

        <!--Inherit Purchase Order Tree View added by Vishal-->
        <record id="purchase_order_view_tree_inherit_purchase_approval_route" model="ir.ui.view">
            <field name="name">purchase.order.view.tree.inherit.purchase_approval_route</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="po_status" optional="show"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
