<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="quality_check_view_form_inherit_bmo_quality" model="ir.ui.view">
        <field name="name">quality.check.form.inherit.bmo_quality</field>
        <field name="model">quality.check</field>
        <field name="inherit_id" ref="quality_control.quality_check_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='product_id']" position="after">
                <field name="type_form"/>
            </xpath>
        </field>
    </record>

    <record id="quality_check_view_search_inherit_bmo_quality" model="ir.ui.view">
        <field name="name">quality.check.view.search.inherit.bmo_quality</field>
        <field name="model">quality.check</field>
        <field name="inherit_id" ref="quality_control.quality_check_view_search"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='product_id']" position="before">
                <field name="no_analysis" string="No. Analisa" filter_domain="[('no_analysis', 'ilike', self)]"/>
                <field name="no_document" string="No. Doc" filter_domain="[('no_document', 'ilike', self)]"/>
            </xpath>
        </field>
    </record>

    <record id="quality_check_action_main" model="ir.actions.act_window">
        <field name="name">Quality Checks</field>
        <field name="res_model">quality.check</field>
        <field name="view_mode">list,kanban,form,pivot,graph,activity</field>
        <field name="view_id" ref="quality_control.quality_check_view_tree"/>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('quality_control.quality_check_view_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('quality_control.quality_check_view_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              No quality check found
            </p><p>
              Define Quality Control Points in order to automatically generate
              quality checks at the right logistic operation: transfers, manufacturing orders.
            </p>
        </field>
    </record>

    <menuitem
        id="quality_control.menu_quality_checks"
        name="Quality Checks"
        action="quality_control.quality_check_action_main"
        parent="quality_control.menu_quality_control"
        groups="bmo_quality.see_menu_qc_base"
        sequence="18"/>

</odoo>