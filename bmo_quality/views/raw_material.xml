                                            <field name="n_2"/>
                                            <field name="n_3"/>
                                            <field name="n_4"/>
                                            <field name="n_5"/>
                                            <field name="n_6"/>
                                            <field name="n_7"/>
                                            <field name="n_8"/>
                                            <field name="n_9"/>
                                            <field name="n_10"/>
                                            <field name="value"/>
                                        </list>
                                    </field>
                                </group>
                            </page>
                        </notebook> -->
                        <group string="Parameter Pemeriksaan">
                            <field name="data_qc_line" mode="list,kanban" nolabel="1" colspan="2" readonly="quality_state != 'none'" force_save="1">
                                <list editable="bottom" create="0" delete="0" edit="1">
                                    <field name="no_text" force_save="1" readonly="1"/>
                                    <field name="header_id" force_save="1" readonly="1"/>
                                    <field name="parameter" force_save="1" readonly="1"/>
                                    <field name="standard" force_save="1" readonly="1"/>
                                    <field name="result" required="1"/>
                                    <field name="method"/>
                                </list>
                            </field>
                        </group>

                        <group string="Rincian Analisa">
                            <field name="specific_gravity_line" mode="list,kanban" nolabel="1" colspan="2" readonly="quality_state != 'none'">
                                <list editable="bottom">
                                    <field name="specific_gravity_id" column_invisible="1"/>
                                    <field name="number"/>
                                    <field name="rincian_id" options="{'no_create': True, 'no_open': True}"/>
                                    <field name="rincian_code" optional="hide"/>
                                    <field name="n_1"/>
                                    <field name="n_2"/>
                                    <field name="n_3"/>
                                    <field name="n_4"/>
                                    <field name="n_5"/>
                                    <field name="n_6"/>
                                    <field name="n_7"/>
                                    <field name="n_8"/>
                                    <field name="n_9"/>
                                    <field name="n_10"/>
                                    <field name="value"/>
                                </list>
                            </field>
                        </group>
                        <separator/>
                        <group string="Configurasi Field" invisible="1">
                            <group>
                                <field name="show_picno_weight_and_water" readonly="0"/>
                                <field name="show_picno_weight" readonly="0"/>
                                <field name="show_n_koh" readonly="0"/>
                            </group>
                            <group>
                                <field name="show_gravity_specific" readonly="0"/>
                                <field name="show_koh_volume" readonly="0"/>
                                <field name="show_mass_sample" readonly="0"/>
                                <field name="show_acid" readonly="0"/>
                            </group>
                        </group>
                        <group>
                            <group >    
                                <field name="picno_weight_and_water" required="1" readonly="quality_state != 'none'" invisible="not show_picno_weight_and_water"/>
                                <field name="picno_weight" required="1" readonly="quality_state != 'none'" invisible="not show_picno_weight"/>
                                <field name="n_koh" required="1" readonly="quality_state != 'none'" invisible="not show_n_koh"/>
                            </group>
                            <group >
                                <field name="gravity_specific" invisible="not show_gravity_specific"/>
                                <field name="koh_volume" invisible="not show_koh_volume"/>
                                <field name="mass_sample" invisible="not show_mass_sample"/>
                                <field name="acid" invisible="not show_acid"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes" readonly="quality_state != 'none'"/>
                        </group>
                        <group string="Kesimpulan :">
                            <group>
                                <field name="released"/>
                                <field name="hold"/>
                            </group>
                            <group>
                                <field name="reject"/>
                                <field name="released_by_sortir" readonly="1" force_save="1"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Action Bahan Baku-->
        <record id="action_data_qc_raw" model="ir.actions.act_window">
            <field name="name">Form QC - Bahan Baku</field>
            <field name="res_model">quality.check</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('type_form', '=', 'raw')]</field>
            <field name="context">{'default_type_form': 'raw'}</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('bmo_quality.data_qc_list_raw')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('bmo_quality.data_qc_form_raw')})]"/>
            <field name="help" type="html">
                <p name="o_view_nocontent_smiling_face">
                    Create Bahan Baku ...
                </p>
            </field>
        </record>

