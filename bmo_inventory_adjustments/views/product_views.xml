<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="product_template_form_view_procurement_button_inherit_ap_stock" model="ir.ui.view">
        <field name="name">product.template_procurement.inherit.ap_stock</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='action_update_quantity_on_hand']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

    <record id="product_variant_easy_edit_view_inherit_ap_stock" model="ir.ui.view">
        <field name="name">product.product.view.form.easy.inherit.ap_stock</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.product_product_view_form_easy_inherit_stock"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='action_update_quantity_on_hand']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

</odoo>