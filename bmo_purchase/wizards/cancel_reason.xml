<odoo>
    <record id="wizard_reason_cancel_form" model="ir.ui.view">
        <field name="name">wizard.reason.cancel</field>
        <field name="model">wizard.reason.cancel</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="pr_id" invisible="1"/>
                        <field name="po_id" invisible="1"/>
                        <field name="reason" required="1"/>
                    </group>
                </group>
                <newline />
                <footer>
                    <button name="action_refuse_reason" string="Confirm" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_reason_cancel" model="ir.actions.act_window">
        <field name="name">Reason Reject</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.reason.cancel</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_reason_cancel_form" />
        <field name="target">new</field>
    </record>

</odoo>
